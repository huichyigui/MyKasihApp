<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DonationDetailFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donation_details"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1">

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="Dal" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="2 KG" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="Salad" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="0.25 KG" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="Okra Curry" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="1 KG" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pickup_details"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="@string/name" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="Alsalam Restaurant" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="@string/date" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="21 March 2023" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="@string/time" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="10 am - 12 pm" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="@string/location" />

                <TextView
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="4 10 Jln 1/82B Bangsar Utama" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:text="@string/claim_donation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>